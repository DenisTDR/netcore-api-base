@model API.Base.Web.Common.Models.Entities.TranslationEntity
@{
    ViewData["Title"] = "Edit " + Model.ToString();
}

<h4>@ViewData["Title"]</h4>

<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <partial name="_Form"></partial>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary"/>
            </div>
        </form>
    </div>
</div>
<div>
    <a href='@Url.Action("Index")'>Back to list</a> |
    <a href='@Url.Action("Details", new {Id = Model.Id})'>Back to details</a>

</div>