@model API.Base.Web.Common.Models.Entities.TemplateEntity

@{
ViewData["Title"] = "Delete " + Model.ToString();
}

<h2>@ViewData["Title"]</h2>
<h3>Are you sure you want to delete this Template?</h3>

<partial name="_Display"></partial>

<form asp-action="Delete">
    <input type="hidden" asp-for="Id"/>
    <input type="submit" value="Delete" class="btn btn-danger"/> 
</form>

<div class="pt-2">
    <a href='@Url.Action("Index")'>Back to list</a> |
    <a href='@Url.Action("Details", new { Id = Model.Id})'>Back to details</a>
</div>