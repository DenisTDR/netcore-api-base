@using API.Base.Web.Base.Extensions.HtmlHelpers
@model IEnumerable<API.Base.Web.Common.Partners.Models.Entities.PartnerEntity>

@{
ViewData["Title"] = "Partner";
}

<h2>@ViewData["Title"]</h2>
<div class="row">
    <div class="col-12 col-md-6">
<a asp-action="Index" asp-controller="PartnerTiersUi" class="mr-3">Partner Tiers</a><a asp-action="Index" asp-controller="PartnerTypesUi" class="mr-3">Partner Types</a>    </div>
    <div class="col-12 col-md-6 d-flex justify-content-end pb-2">
        <a class="btn btn-outline-primary mr-2" asp-action="ReOrder">ReOrder</a>
        <a class="btn btn-outline-primary" asp-action="Create">Create new Partner</a>
    </div>
</div>

<table class="table">
    <thead>
    <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Logo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Type)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Tier)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Url)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Published)
            </th>
                    <th>Actions</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var item in Model)
    {
    <tr>
            <td>
                    <span>@Html.DisplayFor(modelItem => item.Name)</span>
            </td>
            <td>
@{await Html.RenderBlindPartialAsync("_FileLinkPreview", item.Logo, ViewData);}            </td>
            <td>
                    <span>
                        @item.Type
                    </span>
            </td>
            <td>
                    <span>
                        @item.Tier
                    </span>
            </td>
            <td>
                    <span>@Html.DisplayFor(modelItem => item.Url)</span>
            </td>
            <td>
                    <span>@Html.DisplayFor(modelItem => item.Published)</span>
            </td>
                    <td>
<a asp-action="Edit" asp-route-id="@item.Id">Edit</a>                    <span></span>
<a asp-action="Details" asp-route-id="@item.Id">Details</a>                    <span></span>
<a asp-action="Delete" asp-route-id="@item.Id">Delete</a>                    <span></span>
            </td>
    </tr>
    }
    </tbody>
</table>