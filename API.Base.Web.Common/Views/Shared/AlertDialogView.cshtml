@using API.Base.Web.Base.Extensions.HtmlHelpers

@{
    Layout = null;
}

<div id="file-list-modal">
    <div class="modal fade smart-modal" tabindex="-1" role="dialog">
        <div class=" modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">@TempData["_alert.title"]</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <div class="container">
                        <div class="row">
                            <div class="col-12">
                                @{
                                    await Html.RenderBlindPartialAsync("_StatusMessages", null, ViewData);
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>