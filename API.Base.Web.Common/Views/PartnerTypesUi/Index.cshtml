@model IEnumerable<API.Base.Web.Common.Partners.Models.Entities.PartnerTypeEntity>

@{
ViewData["Title"] = "PartnerType";
}

<h2>@ViewData["Title"]</h2>
<div class="row">
    <div class="col-12 col-md-6">
<a asp-action="Index" asp-controller="PartnersUi" class="mr-3">Partners</a><a asp-action="Index" asp-controller="PartnerTiersUi" class="mr-3">Partner Tiers</a>    </div>
    <div class="col-12 col-md-6 d-flex justify-content-end pb-2">
        <a class="btn btn-outline-primary mr-2" asp-action="ReOrder">ReOrder</a>
        <a class="btn btn-outline-primary" asp-action="Create">Create new PartnerType</a>
    </div>
</div>

<table class="table">
    <thead>
    <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LogoSize)
            </th>
                    <th>Actions</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var item in Model)
    {
    <tr>
            <td>
                    <span>@Html.DisplayFor(modelItem => item.Name)</span>
            </td>
            <td>
                    <span>@Html.DisplayFor(modelItem => item.LogoSize)</span>
            </td>
                    <td>
<a asp-action="Edit" asp-route-id="@item.Id">Edit</a>                    <span></span>
<a asp-action="Details" asp-route-id="@item.Id">Details</a>                    <span></span>
<a asp-action="Delete" asp-route-id="@item.Id">Delete</a>                    <span></span>
            </td>
    </tr>
    }
    </tbody>
</table>