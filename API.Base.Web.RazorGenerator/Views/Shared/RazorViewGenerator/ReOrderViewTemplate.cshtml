@model API.Base.Web.RazorGenerator.Models.Order.OrderTemplateModel
@@using API.Base.Web.Base.Extensions.HtmlHelpers
@@model IEnumerable<@Model.FullTypeName>

@@{
ViewData["Title"] = "@Model.PageTitle";
}

<h2>@@ViewData["Title"]</h2>
<div class="row">
    <div class="col-12 d-flex justify-content-end pb-2">
        @Html.Raw("<a class=\"btn btn-outline-danger mr-2\" asp-action=\"Index\">Back</a>")
        @Html.Raw("<button class=\"btn btn-outline-primary mr-2 save-reorder\">Save Order</button>")
    </div>
</div>
<table class="table" data-table-reorder="true">
    <thead>
    <tr>
        <th>Oder Index</th>
        <th>Name</th>
    </tr>
    </thead>
    <tbody>
    @@foreach (var item in Model)
    {
    <tr>
        <td>
            @@item.OrderIndex
        </td>
        <td data-order-id="@@item.Id">
            @@item
        </td>
    </tr>
    }
    </tbody>
</table>
<div class="row">
    <div class="col-12 d-flex justify-content-end pb-2">
        @Html.Raw("<a class=\"btn btn-outline-danger mr-2\" asp-action=\"Index\">Back</a>")
        @Html.Raw("<button class=\"btn btn-outline-primary mr-2 save-reorder\">Save Order</button>")
    </div>
</div>
@Html.Raw("<form asp-action=\"SaveOrder\" class=\"save-reorder-form\">")
@Html.Raw("</form>")