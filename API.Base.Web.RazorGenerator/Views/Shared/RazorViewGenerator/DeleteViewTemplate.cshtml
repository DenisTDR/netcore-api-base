@model API.Base.Web.RazorGenerator.Models.Delete.DeleteTemplateModel
@@model @Model.FullTypeName

@@{
ViewData["Title"] = "Delete " + Model.ToString();
}

<h2>@@ViewData["Title"]</h2>
<h3>Are you sure you want to delete this @Model.EntityName?</h3>

@Html.Raw("<partial name=\"_Display\"></partial>")

@Html.Raw("<form asp-action=\"Delete\">")
@{
    <input type="hidden" @Html.Raw("asp-for=\"Id\"")/>
    <input type="submit" value="Delete" class="btn btn-danger"/> 
}
@Html.Raw("</form>")

<div class="pt-2">
    <a href='@@Url.Action("Index")'>Back to list</a> |
    <a href='@@Url.Action("Details", new { Id = Model.Id})'>Back to details</a>
</div>