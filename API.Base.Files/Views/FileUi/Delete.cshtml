@model API.Base.Files.Models.Entities.FileEntity
@{
    Layout = null;
}
<div class="modal fade smart-modal no-scroll" tabindex="1" role="dialog" id="file-upload-container">
    <div class=" modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Are you sure you want to delete this file?</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div>
                    <dl class="row">
                        <dt class="col-sm-4">
                            @Html.DisplayNameFor(model => model.Name)
                        </dt>
                        <dd class="col-sm-8">
                            @Html.DisplayFor(model => model.Name).@Html.DisplayFor(model => model.Extension)
                        </dd>
                        <dt class="col-sm-4">
                            @Html.DisplayNameFor(model => model.OriginalName)
                        </dt>
                        <dd class="col-sm-8">
                            @Html.DisplayFor(model => model.OriginalName)
                        </dd>
                        <dt class="col-sm-4">
                            @Html.DisplayNameFor(model => model.Size)
                        </dt>
                        <dd class="col-sm-8">
                            @Html.DisplayFor(model => model.Size)
                        </dd>
                    </dl>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-outline-secondary" data-dismiss="modal">Close</button>
                <form asp-action="Delete">
                    <input type="hidden" asp-for="Id"/>
                    <input type="submit" value="Delete" class="btn btn-danger"/> 
                </form>
            </div>
        </div>
    </div>
</div>
